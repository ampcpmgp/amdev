NodeApp = require("am-node-parts")
CompilerSrc = require("./CompilerSrc")

module.exports = class CompileAll extends CompilerSrc
  constructor: ->
    super(false)
    NodeApp.prototype.check_dir_tree("./", /\/src\/.*\.(es6|coffee|sass)$/, (loc, file) =>
      if(file.match(/es6$/))             then this.compile_es6(loc)
      else if (file.match(/coffee$/)) then this.compile_coffee(loc)
      else if (file.match(/sass$/))   then this.compile_sass(loc)
      )
