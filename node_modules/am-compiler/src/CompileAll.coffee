NodeApp = require("am-node-parts")
CompilerSrc = require("./CompilerSrc")
np = new NodeApp

module.exports = class CompileAll extends CompilerSrc
  constructor: ->
    super(false)
  start: ->
    console.log np.check_dir_tree
    np.check_dir_tree("./", /\/src\/.*\.(coffee|sass)$/, (loc, file) =>
      if file.match(/coffee$/) then @compile_coffee(loc)
      else if file.match(/sass$/)  then @compile_sass(loc)
      )
